<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Version>0.0.5</Version>
    <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
    <SignAssembly>False</SignAssembly>
    <Company></Company>
    <Description>Base Configuration for Hsc.Framework</Description>
    <PackageProjectUrl>https://github.com/hurles/Hsc.ApiFramework</PackageProjectUrl>
    <PackageIcon>HSC Framework logo 128.png</PackageIcon>
    <RepositoryUrl>https://github.com/hurles/Hsc.ApiFramework.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>Hsc;Framework;Configuration;Api;</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageReleaseNotes>Initial Pre-Release</PackageReleaseNotes>
    <AssemblyVersion>0.0.5</AssemblyVersion>
    <FileVersion>0.0.5</FileVersion>
    <Authors>Hurles</Authors>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="6.0.3" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="6.0.3" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Hsc.ApiFramework.Configuration\Hsc.ApiFramework.Configuration.csproj" />
    <ProjectReference Include="..\Hsc.ApiFramework.Core\Hsc.ApiFramework.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="HSC Framework logo 128.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
